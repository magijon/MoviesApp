        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape>
            <solid android:color="#ffffffff" />

            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary" />

        </shape>
    </item>

    <item
        android:bottom="-40dp">
        <shape>
            <stroke
                android:width="40dp"
                android:color="@color/white" />

        </shape>
    </item>
</layer-list>